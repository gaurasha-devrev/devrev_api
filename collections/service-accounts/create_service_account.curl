#!/bin/bash
# Create a new service account

curl -X POST "https://api.devrev.ai/service-accounts.create" \
  -H "Authorization: Bearer $DEVREV_TOKEN" \
  -H "Content-Type: application/json" \
  -d '{
    "display_name": "API Service Account",
    "description": "Service account created via API for automated operations",
    "permissions": ["read", "write"],
    "scopes": ["accounts", "works", "users"]
  }'
