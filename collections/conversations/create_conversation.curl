#!/bin/bash
# Create a new conversation

curl -X POST "https://api.devrev.ai/conversations.create" \
  -H "Authorization: Bearer $DEVREV_TOKEN" \
  -H "Content-Type: application/json" \
  -d '{
    "title": "Test Support Conversation",
    "description": "Test conversation created via API for customer support",
    "applies_to_part": "'$PART_ID'",
    "members": [
      "'$DEV_USER_ID'",
      "'$REV_USER_ID'"
    ],
    "tags": ["'$TAG_ID'"]
  }'
