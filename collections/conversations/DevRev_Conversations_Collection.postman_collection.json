	"item": [
		{
			"name": "Create Conversation",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.conversation) {",
							"        pm.environment.set('conversation_id', response.conversation.id);",
							"        pm.environment.set('conversation_display_id', response.conversation.display_id);",
							"        pm.environment.set('conversation_title', response.conversation.title);",
							"        console.log('Conversation created with ID:', response.conversation.id);",
							"    }",
							"} else {",
							"    console.log('Conversation creation failed:', pm.response.text());",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{aat}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"title\": \"Support: {{$randomLoremSentence}}\",\n  \"description\": \"Test conversation created via API on {{$timestamp}}\\n\\nCustomer inquiry about product features and functionality.\",\n  \"type\": \"support\",\n  \"priority\": \"p2\",\n  \"applies_to_part\": \"{{part_id}}\",\n  \"owned_by\": [\"{{dev_user_id}}\"],\n  \"members\": [\n    {\n      \"member_type\": \"dev_user\",\n      \"member_id\": \"{{dev_user_id}}\"\n    },\n    {\n      \"member_type\": \"rev_user\", \n      \"member_id\": \"{{rev_user_id}}\"\n    }\n  ]\n}"
				},
				"url": {
					"raw": "https://{{base_url}}/conversations.create",
					"protocol": "https",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"conversations.create"
					]
				},
				"description": "Creates a new conversation"
			}
		},
		{
			"name": "Get Conversation by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{aat}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://{{base_url}}/conversations.get?id={{conversation_id}}",
					"protocol": "https",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"conversations.get"
					],
					"query": [
						{
							"key": "id",
							"value": "{{conversation_id}}",
							"description": "Conversation ID"
						}
					]
				},
				"description": "Retrieves conversation details by ID"
			}
		},
		{
			"name": "List Conversations",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.conversations && response.conversations.length > 0) {",
							"        pm.environment.set('first_conversation_id', response.conversations[0].id);",
							"        console.log('Found', response.conversations.length, 'conversations');",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
