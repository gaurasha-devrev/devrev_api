{
	"info": {
		"_postman_id": "notif123-5678-9abc-def0-123456789012",
		"name": "DevRev - Notifications API",
		"description": "Collection for DevRev Notifications API operations - system notifications and alerts management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "12345678"
	},
	"item": [
		{
			"name": "Create Notification",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.notification) {",
							"        pm.environment.set('notification_id', response.notification.id);",
							"        console.log('Notification created with ID:', response.notification.id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{aat}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"title\": \"Test Notification\",\n  \"message\": \"This is a test notification created via API\",\n  \"type\": \"info\",\n  \"recipients\": [\"{{dev_user_id}}\"],\n  \"priority\": \"normal\"\n}"
				},
				"url": {
					"raw": "https://{{base_url}}/notifications.create",
					"protocol": "https",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"notifications.create"
					]
				}
			}
		},
		{
			"name": "List Notifications",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{aat}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://{{base_url}}/notifications.list?limit=20",
					"protocol": "https",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"notifications.list"
					],
					"query": [
						{
							"key": "limit",
							"value": "20"
						}
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "api.devrev.ai",
			"type": "string"
		}
	]
}
