#!/bin/bash
# Update rev organization

curl -X POST "https://{{base_url}}/rev-orgs.update" \
  -H "Authorization: Bearer {{DEVREV_TOKEN}}" \
  -H "Content-Type: application/json" \
  -d '{
    "id": "{{rev_org_id}}",
    "display_name": "[UPDATED] Test Customer Org",
    "description": "Customer organization updated via API with new information and settings"
  }'
