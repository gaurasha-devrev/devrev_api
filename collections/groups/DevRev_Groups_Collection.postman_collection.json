{
	"info": {
		"_postman_id": "groups123-5678-9abc-def0-123456789012",
		"name": "DevRev - Groups API",
		"description": "Collection for DevRev Groups API operations - user group management and permissions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "12345678"
	},
	"item": [
		{
			"name": "Create Group",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.group) {",
							"        pm.environment.set('group_id', response.group.id);",
							"        console.log('Group created with ID:', response.group.id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{aat}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"API Test Group\",\n  \"description\": \"Test group created via API\",\n  \"members\": [\"{{dev_user_id}}\"],\n  \"permissions\": [\"read\", \"write\"]\n}"
				},
				"url": {
					"raw": "https://{{base_url}}/groups.create",
					"protocol": "https",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"groups.create"
					]
				}
			}
		},
		{
			"name": "List Groups",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{aat}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://{{base_url}}/groups.list?limit=20",
					"protocol": "https",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"groups.list"
					],
					"query": [
						{
							"key": "limit",
							"value": "20"
						}
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "api.devrev.ai",
			"type": "string"
		}
	]
}
